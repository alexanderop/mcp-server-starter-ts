{
  "name": "mcp-hello-world",
  "version": "1.0.0",
  "description": "A minimalistic MCP server demonstrating tools, resources, and prompts",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --test \"tests/**/*.test.ts\"",
    "test:watch": "node --test --watch \"tests/**/*.test.ts\"",
    "build": "tsc && chmod 755 build/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node build/index.js"
  },
  "keywords": [
    "mcp",
    "hello-world",
    "example",
    "tutorial"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "fast-glob": "^3.3.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "bin": {
    "mcp-hello-world": "./build/index.js"
  },
  "files": [
    "build"
  ]
}

{
  "name": "mcp-hello-world",
  "version": "1.0.0",
  "description": "A minimalistic MCP server demonstrating tools, resources, and prompts",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npm run build && npm run test:run",
    "test:run": "node --version | grep -q 'v2[3-9]\\|v[3-9][0-9]' && node --test tests/**/*.test.ts || (npm run build:tests && node --test build/tests/**/*.test.js)",
    "build": "tsc && chmod 755 build/index.js",
    "build:tests": "tsc -p tsconfig.test.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "hello-world",
    "example",
    "tutorial"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "bin": {
    "mcp-hello-world": "./build/index.js"
  },
  "files": [
    "build"
  ]
}
